<%
String reslut = "";
int sum = 0;
int num = Integer.parseInt(request.getParameter("number"));
for(int i = 1;i >= num;i++) {
	sum += i;
	system.out.println(sum);
	if(i == num) {
		 reslut.concat(" = " + sum);
	}
	else if(i == 1) {
		reslut.concat("" + i);
	}
	else reslut.concat(" + " + i);
}
%>
<h1>1부터 <%=request.getParameter("number") %>까지 자연수 합 구하기</h1>
<%=reslut %> <%=sum %>
</body>
</html>